<!-- Master layout. -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingLeft="16dp"
        android:paddingEnd="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="2dp"
        >

        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <android.support.v7.widget.AppCompatTextView
                android:layout_gravity="start"
                android:fontFamily="sans-serif"
                android:id="@+id/detail_day_textview"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textColor="@color/secondary_text"
                android:textSize="24sp"
                />
            <ImageButton
                android:visibility="gone"
                android:layout_gravity="end"
                android:id="@+id/detail_shekel_button"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/shekel"
                android:background="#00000000"
                android:elevation="10dp"/>
            <ImageButton
                android:visibility="gone"
                android:layout_gravity="end"
                android:id="@+id/detail_pidion_button"
                android:adjustViewBounds="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:src="@drawable/ben"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:background="#00000000"
                android:elevation="10dp"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center_horizontal"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <com.kobi.metalsexchange.app.component.AutofitTextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/detail_rate_textview"
                android:textColor="@color/primary_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:singleLine="true"
                android:textSize="45sp"
                />

            <android.support.v7.widget.AppCompatTextView
                android:fontFamily="sans-serif-light"
                android:id="@+id/detail_rate_unit_textview"
                android:textColor="@color/primary_text"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detail_icon"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="end" />

            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_width="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="end"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"

                >

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/detail_currency1_textview"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:textColor="@color/secondary_text"
                    android:textSize="25sp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="end"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/detail_currency2_textview"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/secondary_text"
                    android:textSize="25sp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="end"
                    />

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/detail_currency3_textview"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_width="match_parent"
                    android:textColor="@color/secondary_text"
                    android:textSize="25sp"
                    android:gravity="center_horizontal"
                    android:layout_gravity="end"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
