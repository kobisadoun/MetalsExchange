<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="top"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:padding="10dp">

    <LinearLayout
        android:gravity="center_vertical"
        android:layout_gravity="start"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_gravity="start"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_gravity="start"
                android:fontFamily="sans-serif"
                android:id="@+id/detail_day_textview"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textColor="@color/secondary_text"
                android:textSize="20sp"
                android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                android:text="toady 25 Jun"
                />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/detail_rate_textview"
                    android:textColor="@color/primary_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Title"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                    android:textSize="40sp"
                    android:layout_gravity="bottom"
                    />

                <TextView
                    android:fontFamily="sans-serif-light"
                    android:id="@+id/detail_rate_unit_textview"
                    android:textColor="@color/primary_text"
                    android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="15sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                    android:layout_gravity="bottom"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/detail_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_gravity="end"
                />

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        app:useDefaultMargins="true"
        app:columnCount="2"
        android:layout_marginLeft="20dp">


        <TextView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:text="Weight Unit:"
            />


        <RadioGroup
            android:id="@+id/radio_weight"
            app:layout_gravity="fill_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1">

            <RadioButton
                android:id="@+id/radioGram"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/pref_units_label_grams"
                android:buttonTint="@color/primary"/>
            <RadioButton
                android:id="@+id/radioTroy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:text="@string/pref_units_label_ounce"
                android:buttonTint="@color/primary"/>
        </RadioGroup>

        <TextView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:text="Weight:"
            />

        <EditText
            android:id="@+id/weight_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_gravity="fill"
            android:inputType="numberDecimal"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"/>


        <TextView
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:gravity="center_vertical"
            android:text="Gold Purity:"/>

        <android.support.v7.widget.AppCompatSpinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gold_purity_spinner"
            app:layout_gravity="fill"
            android:drawSelectorOnTop="true"
            style="@android:style/Widget.Holo.Light.Spinner"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            />

        <TextView
            android:id="@+id/metal_price_textview"
            android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
            android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/primary_text_default_material_light"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            android:fontFamily="sans-serif"
            app:layout_gravity="fill_horizontal"
            android:text=""
            android:textSize="50sp"/>



    </android.support.v7.widget.GridLayout>

</LinearLayout>